---
import Layout from '../../layouts/Layout.astro';
import UserNavbar from '../../components/user/UserNavbar.astro';
---

<Layout title="User Dashboard">
  <div class="min-h-screen bg-gray-50">
    <UserNavbar />
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-8">Welcome to Your Dashboard!</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold mb-4">Your Profile</h2>
          <div class="space-y-3">
            <div class="flex items-center p-3 bg-blue-50 rounded-lg">
              <div class="ml-3">
                <p class="text-sm font-medium text-blue-800">Profile Status</p>
                <p class="text-sm text-blue-600">Active</p>
              </div>
            </div>
            <a href="/user/profile" class="block text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
              Edit Profile
            </a>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
          <div class="space-y-3">
            <div class="border-l-4 border-green-400 pl-3">
              <p class="text-sm text-gray-600">Last login: Today at 9:30 AM</p>
            </div>
            <div class="border-l-4 border-blue-400 pl-3">
              <p class="text-sm text-gray-600">Profile updated: 2 days ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>