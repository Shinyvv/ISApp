<nav class="bg-blue-600 text-white p-4">
  <div class="max-w-7xl mx-auto flex justify-between items-center">
    <div class="text-xl font-bold">User Dashboard</div>
    <div class="flex items-center space-x-6">
      <a href="/user/profile" class="flex items-center space-x-2 hover:text-gray-200">
        <span>Profile</span>
      </a>
      <a href="/user/activity" class="flex items-center space-x-2 hover:text-gray-200">
        <span>Activity</span>
      </a>
      <button
        id="logout-btn"
        class="flex items-center space-x-2 text-red-200 hover:text-red-100"
      >
        <span>Logout</span>
      </button>
    </div>
  </div>
</nav>

<script>
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    localStorage.clear();
    window.location.href = '/login';
  });
</script>